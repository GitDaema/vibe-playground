{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Graph Puzzle RuleSet",
  "description": "A set of rules for a graph-based puzzle.",
  "type": "array",
  "items": {
    "$ref": "#/definitions/rule"
  },
  "definitions": {
    "rule": {
      "type": "object",
      "properties": {
        "when": {
          "type": "array",
          "description": "A list of conditions that must all be true.",
          "items": {
            "$ref": "#/definitions/condition"
          }
        },
        "then": {
          "type": "array",
          "description": "A list of actions to execute if all conditions are met.",
          "items": {
            "$ref": "#/definitions/action"
          }
        },
        "sourceLine": {
          "type": "number",
          "description": "The original line number from the CNL input."
        }
      },
      "required": ["when", "then", "sourceLine"]
    },
    "condition": {
      "type": "object",
      "description": "A single condition, e.g., {\"at\": \"A\"}.",
      "minProperties": 1,
      "maxProperties": 1
    },
    "action": {
      "type": "object",
      "description": "A single action, e.g., {\"moveTo\": \"B\"}.",
      "minProperties": 1,
      "maxProperties": 1
    }
  }
}
